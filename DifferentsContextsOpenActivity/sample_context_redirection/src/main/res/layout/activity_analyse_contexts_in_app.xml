<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyseAndroidContextClass">
    <Button
        android:id="@+id/activity_analyses_fg_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fragment_activity_context"
        app:layout_constraintBottom_toTopOf="@id/activity_analyses_base_context"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="clickView"
        />

    <Button
        android:id="@+id/activity_analyses_base_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/base_context"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_analyses_fg_context"
        android:onClick="clickView"
        />

    <Button
        android:id="@+id/activity_analyses_application_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/application_context"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_analyses_base_context"
        android:onClick="clickView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>